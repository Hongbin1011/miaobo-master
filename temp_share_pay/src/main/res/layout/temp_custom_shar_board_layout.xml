<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:orientation="vertical"
>


		<RelativeLayout android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:background="#FFFFFF"
		                android:paddingBottom="8dp"
		                android:paddingTop="8dp"
		>
				<TextView android:id="@+id/textView"
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:layout_centerHorizontal="true"
				          android:layout_centerVertical="true"
				          android:text="分享到"
				          android:textColor="#40000000"/>
				<ImageView android:layout_width="wrap_content"
				           android:id="@+id/share_colse"
				           android:layout_height="match_parent"
				           android:layout_alignBottom="@+id/textView"
				           android:layout_alignParentEnd="true"
				           android:layout_alignParentRight="true"
				           android:layout_marginRight="10dp"
				           android:src="@drawable/act_share_icon"/>

		</RelativeLayout>

		<View android:layout_width="match_parent"
		      android:layout_height="1px"
		      android:background="#e5e5e5"
		/>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:layoutAnimation="@anim/temp_layout_animation"
				android:orientation="horizontal"
				android:paddingBottom="35dp"
				android:paddingTop="35dp"
		>
				<RelativeLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1">

						<ImageButton
								android:id="@+id/temp_share_wechat"
								android:layout_width="50dp"
								android:layout_height="50dp"
								android:layout_centerHorizontal="true"
								android:background="@drawable/temp_icon_custom_share_wx"
						/>
						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/temp_share_wechat"
								android:layout_centerHorizontal="true"
								android:layout_marginTop="5dp"
								android:text="微信好友"
								android:textSize="14sp"/>
				</RelativeLayout>

				<RelativeLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1">

						<ImageButton
								android:id="@+id/temp_share_circle"
								android:layout_width="50dp"
								android:layout_height="50dp"
								android:layout_centerHorizontal="true"
								android:background="@drawable/temp_icon_custom_share_friends"
						/>
						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/temp_share_circle"
								android:layout_centerHorizontal="true"
								android:layout_marginTop="5dp"
								android:text="朋友圈"
								android:textSize="14sp"/>
				</RelativeLayout>


				<RelativeLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1">

						<ImageButton
								android:id="@+id/temp_share_qzone"
								android:layout_width="50dp"
								android:layout_height="50dp"
								android:layout_centerHorizontal="true"
								android:background="@drawable/temp_icon_custom_share_qqzone"
						/>
						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/temp_share_qzone"
								android:layout_centerHorizontal="true"
								android:layout_marginTop="5dp"
								android:text="QQ空间"
								android:textSize="14sp"/>
				</RelativeLayout>
				<RelativeLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1">

						<ImageButton
								android:id="@+id/temp_share_qq"
								android:layout_width="50dp"
								android:layout_height="50dp"
								android:layout_centerHorizontal="true"
								android:background="@drawable/temp_icon_custom_share_qq"
						/>
						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/temp_share_qq"
								android:layout_centerHorizontal="true"
								android:layout_marginTop="5dp"
								android:text="QQ好友"
								android:textSize="14sp"/>
				</RelativeLayout>
		</LinearLayout>

</LinearLayout>