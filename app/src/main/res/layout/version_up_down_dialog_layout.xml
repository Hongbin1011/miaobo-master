<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/version_up_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="正在更新"
            android:textColor="@color/text_theme_black"
            android:textSize="@dimen/dp_17"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_divede_color_light"/>

    <SeekBar
        android:id="@+id/version_up_down_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:max="100"
        android:maxHeight="8dp"
        android:minHeight="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:progressDrawable="@drawable/version_up_progress_color"

        />
    <!--android:thumb="@mipmap/icon_launcher"-->
    <LinearLayout
        android:id="@+id/register_and_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_center_head_iv"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/version_up_down_now_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0M"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/dp_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/dp_15"/>

        <TextView
            android:id="@+id/version_up_down_total_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0M"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/dp_15"/>
    </LinearLayout>


</LinearLayout>