<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:background="@color/white"
              android:orientation="horizontal"
              android:paddingBottom="2dp"
              android:paddingLeft="@dimen/dp_10"
              android:paddingRight="@dimen/dp_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tv_item_joke_zan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_like"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="0"
            android:textColor="@color/text_remind_gray_light"
            android:textSize="12sp"/>

        <include
            layout="@layout/line_layout"
            android:layout_width="@dimen/line_dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tv_item_joke_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_comment"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="0"
            android:textColor="@color/text_remind_gray_light"
            android:textSize="12sp"
            />

        <include
            layout="@layout/line_layout"
            android:layout_width="@dimen/line_dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_item_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/shoucang_hui"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textColor="@color/text_remind_gray_light"
            android:textSize="12sp"/>

        <include
            layout="@layout/line_layout"
            android:layout_width="@dimen/line_dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tv_item_joke_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_share"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textColor="@color/text_remind_gray_light"
            android:textSize="12sp"/>

    </LinearLayout>


</LinearLayout>

