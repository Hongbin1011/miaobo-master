<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="#70000000"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <LinearLayout
        android:padding="@dimen/dp_15"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_close"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"

            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dialog_title"
                android:background="@drawable/shape_round_back"
                android:text="@string/app_name"
                android:gravity="center"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
               
               
               <EditText
                   android:maxLines="1"
                   android:maxLength="10"
                   android:id="@+id/dialog_notice_content"
                   android:layout_marginTop="40dp"
                   android:gravity="center"
                   android:textColor="#666666"
                   android:textSize="@dimen/sp_16"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_40">

                    <Button
                        android:id="@+id/dialog_btn_left"
                        android:layout_weight="1"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_16"
                        android:text="取消"
                        android:background="@drawable/shape_round_btn_quit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"/>
                    <View
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp1"/>
                    <Button
                        android:id="@+id/dialog_btn_right"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        android:text="登录"
                        android:background="@drawable/shape_round_btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_round_back2"/>

        </LinearLayout>
    </LinearLayout>



</FrameLayout>
