<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:id="@+id/re_main_comment"
                android:layout_height="wrap_content"
                android:background="@color/white"
                tools:background="#fc00"
                android:paddingLeft="@dimen/left_right_margin"
                android:paddingRight="@dimen/left_right_margin">

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="@color/text_remind_gray_light"
        android:textSize="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/comment_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_marginBottom="@dimen/dp_10"
        android:lineSpacingExtra="1.3dp"
        android:textColor="@color/text_theme_black"
        android:textSize="@dimen/sp_16"
        />

    <TextView
        android:id="@+id/comment_main_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_main"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/text_remind_gray_light"
        android:textSize="@dimen/dp_12"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_dp"
        android:layout_below="@+id/comment_main_time"
        android:background="@color/line_color"/>

    <TextView
        android:id="@+id/tv_item_joke_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/icon_like"
        android:drawablePadding="@dimen/dp_9"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@color/text_remind_gray_light"
        android:textSize="12sp"
        tools:text="0"/>

    <TextView
        android:id="@+id/tv_jb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_item_joke_zan"
        android:paddingBottom="@dimen/dp_2"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_15"
        android:text="举报"
        android:textColor="@color/text_remind_gray_light"
        android:textSize="@dimen/sp_14"/>
</RelativeLayout>