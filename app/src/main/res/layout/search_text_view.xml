<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="#ff3333">

    <ImageView
        android:id="@+id/search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/back"
        android:layout_marginLeft="@dimen/dp10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_text_height"
        android:layout_toRightOf="@id/search_back"
        android:layout_marginLeft="@dimen/search_text_view_margin_horizontal"
        android:layout_marginRight="45dp"
        android:background="@drawable/common_round_bg_white"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_search_img"
            android:layout_marginLeft="@dimen/dp10"
            android:textSize="@dimen/sp20"
            android:textColor="@color/white"
            android:visibility="gone"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sobtn"
            android:layout_marginLeft="@dimen/dp10"
            />

        <TextView
            android:id="@+id/tvSearchText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:text="@string/search_intonewworld"
            android:textColor="@color/edit_hint_color"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/title_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/movie_share"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>