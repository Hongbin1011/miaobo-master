<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/version_up_title_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="有新版本啦"
        android:textColor="@color/text_theme_black"
        android:textSize="@dimen/dp_18"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_divede_color_light"/>

    <TextView
        android:id="@+id/version_up_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="为了更好的体验，请升级APP"
        android:textColor="@color/custom_dark_666666"
        android:textSize="@dimen/dp_17"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_divede_color_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/version_up_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下次再说"
            android:textColor="@color/text_theme_black"
            android:textSize="@dimen/dp_17"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_divede_color_light"/>

        <TextView
            android:id="@+id/version_up_start"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/text_theme_black"
            android:textSize="@dimen/dp_17"/>
    </LinearLayout>
</LinearLayout>