<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="#70000000"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <LinearLayout
        android:padding="@dimen/dp_15"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/dialog_close"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_close"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"

            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:orientation="vertical">
            <TextView
                android:background="@drawable/shape_round_back"
                android:text="登录"
                android:gravity="center"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/login_phone"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:hint="请输入手机号"
                    android:textColorHint="#666666"
                    android:textColor="#666666"/>
                <include layout="@layout/line_layout"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <EditText
                        android:inputType="number"
                        android:id="@+id/login_code"
                        android:maxLines="1"
                        android:background="@null"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入验证码"
                        android:textColorHint="#666666"
                        android:textColor="#666666"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/login_code_btn"
                        android:background="@drawable/shape_person_btn"
                        android:textSize="@dimen/sp13"
                        android:textColor="#666666"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_40"
                        android:text="发送验证码"/>
                </LinearLayout>
                <include layout="@layout/line_layout"/>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_40">

                    <Button
                        android:id="@+id/login_btn_quit"
                        android:layout_weight="1"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_15"
                        android:text="取消"
                        android:background="@drawable/shape_round_btn_quit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"/>
                    <View
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp1"/>
                    <Button
                        android:id="@+id/login_btn_login"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15"
                        android:text="登录"
                        android:background="@drawable/shape_round_btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_round_back2"/>

        </LinearLayout>
    </LinearLayout>



</FrameLayout>
