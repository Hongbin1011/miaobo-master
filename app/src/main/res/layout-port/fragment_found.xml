<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/found_gen"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <!--<include-->
    <!--android:id="@+id/main_head_layout"-->
    <!--layout="@layout/general_head_layout" />-->

    <RelativeLayout
        android:id="@+id/main_head_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/video_main">

        <RelativeLayout
            android:id="@+id/child_head_layout"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp6"
                android:background="@drawable/common_round_bg_white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/search_edit_baidu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="@string/search_foundhint"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp10"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/sp_14"/>

                <!--<TextView-->
                <!--android:id="@+id/search_img_icon"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="@dimen/dp10"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:text="@string/ic_search_img"-->
                <!--android:textColor="#aeaeae"-->
                <!--android:textSize="@dimen/sp18" />-->

            </LinearLayout>


        </RelativeLayout>

        <View
            android:id="@+id/head_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadow"/>

    </RelativeLayout>


    <!--<com.movie.beauty.lib.MultiStateView xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--android:id="@id/stateView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--app:emptyView="@layout/empty_view"-->
    <!--app:errorView="@layout/error_view"-->
    <!--app:loadingView="@layout/loading_view"-->
    <!--android:layout_marginBottom="54dp"-->
    <!--app:viewState="loading">-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/found_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

    <!--</com.movie.beauty.lib.MultiStateView>-->

</LinearLayout>
